<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hey, Hello ðŸ‘‹"
            android:padding="10dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the information you entered while rejistering"
            android:paddingLeft="13dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginBottom="25dp"
            />
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:background="#65575F5F"
            android:textColorHint="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white"
            android:padding="10dp"
            android:background="#65575F5F"
            android:layout_marginBottom="20dp"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your password"
            android:textColorHint="@color/white"
            android:background="#65575F5F"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            />
        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter date of birth"
            android:inputType="date"
            android:textColorHint="@color/white"
            android:background="#65575F5F"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="#0091EA"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            />

        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result"
                android:background="#00C853"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/nameOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="#00B8D4"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/emailOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="#00B8D4"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/passwordOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="#00B8D4"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/dobOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="#00B8D4"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>